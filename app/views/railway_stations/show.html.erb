<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @railway_station.title %>
</p>

<% if @railway_station.routes.empty? %>
  <p>No routes for this station</p>
<%else%>
  <p>Station included in these routes:</p>
  <ul>
    <% @railway_station.route.each do |route| %>
      <li><%= route.name %></li>
    <%end%>
  </ul>
<%end%>

<%= link_to 'Edit', edit_railway_station_path(@railway_station) %> |
<%= link_to 'Back', railway_stations_path %>
