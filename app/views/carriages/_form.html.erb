<%= form_with(model: carriage.becomes(Carriage), local: true) do |form| %>
  <%= render 'common/errors', resourse: carriage %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, options_for_select([['EconomyCarriage'],['CoupeCarriage'],['SVCarriage'],['SeatedCarriage']]) %>
  </div>

  <div class="field">
    <%= form.label :top_seats %>
    <%= form.text_field :top_seats %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.text_field :bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :side_top_seats %>
    <%= form.text_field :side_top_seats %>
  </div>

  <div class="field">
    <%= form.label :side_bottom_seats %>
    <%= form.text_field :side_bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :seats %>
    <%= form.text_field :seats %>
  </div>


  <div class="field">
    <%= form.label :train, 'Train' %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>


  <div class="actions">
    <%= form.submit "#{ @carriage.new_record? ? 'Create' : 'Edit' }" %>
  </div>
<% end %>
