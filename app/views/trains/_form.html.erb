<%= form_with(model: train, local: true) do |form| %>
  <%= render 'common/errors', resourse: @train %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number %>
  </div>

  <div class="field">
    <%= form.label :current_station, "Current station" %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title  %>
  </div>

  <div class="field">
    <%= form.label :route, "Current route" %>
    <%= form.collection_select :route_id, Route.all, :id, :name  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
