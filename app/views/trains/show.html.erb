<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>On station:</strong>
  <% if @train.current_station.present? %>
    <%= @train.current_station.title %>
  <% else %>
    No stations
  <% end %>
</p>

<table border="1">
  <tr>
    <th>Econom-class carriages count: </th>
    <td><%= @train_carriages['econom-class'][:size] %></td>
    <td>top seats count </td>
    <td><%= @train_carriages['econom-class'][:top_seats] %></td>
    <td>bottom seats count </td>
    <td><%= @train_carriages['econom-class'][:bottom_seats] %></td>
  </tr>
  <tr>
    <th>Compartment carriages count: </th>
    <td><%= @train_carriages['compartment'][:size] %></td>
    <td>top seats count </td>
    <td><%= @train_carriages['compartment'][:top_seats] %></td>
    <td>bottom seats count </td>
    <td><%= @train_carriages['compartment'][:bottom_seats] %></td>
  </tr>
</table>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
